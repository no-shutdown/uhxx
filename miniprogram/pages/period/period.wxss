.calendar-container {
  margin-bottom: 50rpx;
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 50rpx;
}

.calendar-nav {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  font-size: 36rpx;
  color: white;
  width: 70rpx;
  height: 70rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.calendar-nav:active {
  transform: scale(0.95);
}

.calendar-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
}

.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 16rpx;
}

.calendar-weekday {
  text-align: center;
  color: #666;
  font-size: 24rpx;
  padding: 16rpx;
  font-weight: 600;
}

.calendar-day {
  aspect-ratio: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  cursor: pointer;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(10rpx);
}

.calendar-day:hover {
  transform: scale(1.1);
  background: rgba(255, 255, 255, 0.8);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.1);
}

.calendar-day.today {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  font-weight: bold;
  box-shadow:
    0 8rpx 24rpx rgba(79, 172, 254, 0.3),
    0 2rpx 8rpx rgba(79, 172, 254, 0.2);
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.calendar-day.period {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow:
    0 8rpx 24rpx rgba(102, 126, 234, 0.3),
    0 2rpx 8rpx rgba(102, 126, 234, 0.2);
  position: relative;
}

.calendar-day.period::after {
  content: 'üå∏';
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  font-size: 16rpx;
}

.calendar-day.predicted {
  background: linear-gradient(135deg, #FFB3C6 0%, #FF8FA3 100%);
  color: #D81B60;
  font-weight: 600;
  border: 2rpx dashed rgba(216, 27, 96, 0.3);
}

.calendar-day.ovulation {
  background: linear-gradient(135deg, #56ab2f 0%, #a8e6cf 100%);
  color: white;
  box-shadow:
    0 8rpx 24rpx rgba(86, 171, 47, 0.3),
    0 2rpx 8rpx rgba(86, 171, 47, 0.2);
  position: relative;
}

.calendar-day.ovulation::after {
  content: 'ü•ö';
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  font-size: 16rpx;
}

.calendar-day.other-month {
  color: #ccc;
}

.calendar-legend {
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
  padding-top: 30rpx;
  border-top: 1px solid #f0f0f0;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 24rpx;
  color: #666;
}

.legend-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
}

.legend-dot.period {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.legend-dot.ovulation {
  background: linear-gradient(135deg, #4CAF50 0%, #66BB6A 100%);
}

.legend-dot.predicted {
  background: linear-gradient(135deg, #FFB3C6 0%, #FF8FA3 100%);
}

.legend-dot.today {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

