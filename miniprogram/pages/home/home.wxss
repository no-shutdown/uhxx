  align-items: center;
  gap: 24rpx;
}

.transaction-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  box-shadow: 0 8rpx 30rpx rgba(0,0,0,0.1);
}

.transaction-icon.food {
  background: linear-gradient(135deg, #FFE0B2 0%, #FFCC80 100%);
}

.transaction-icon.transport {
  background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
}

.transaction-icon.shopping {
  background: linear-gradient(135deg, #F3E5F5 0%, #E1BEE7 100%);
}

.transaction-icon.income {
  background: linear-gradient(135deg, #E8F5E8 0%, #C8E6C9 100%);
}

.transaction-title {
  font-size: 32rpx;
  margin-bottom: 8rpx;
  font-weight: 600;
}

.transaction-time {
  font-size: 26rpx;
  color: #666;
}

.transaction-amount {
  font-size: 34rpx;
  font-weight: 700;
}

.amount-expense {
  color: #ff4444;
}

.amount-income {
  color: #00C851;
}

.view-more {
  text-align: center;
  margin-top: 30rpx;
  padding: 20rpx;
  color: #667eea;
  font-size: 28rpx;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.6);
  z-index: 2000;
  display: flex;
  align-items: flex-end;
}

.modal-content {
  width: 100%;
  background: white;
  border-radius: 32rpx 32rpx 0 0;
  padding: 40rpx 32rpx 60rpx;
  animation: slideUp 0.4s ease-out;
  box-shadow: 0 -20rpx 80rpx rgba(0,0,0,0.2);
  max-height: 85vh;
  overflow-y: auto;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.modal-header {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  padding-right: 56rpx;
  border-bottom: 2rpx solid #f0f0f0;
  position: relative;
  min-height: 60rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #2c3e50;
  flex: 1;
}

.close-btn {
  background: transparent;
  font-size: 32rpx;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #95a5a6;
  transition: all 0.3s ease;
  padding: 0;
  margin: 0;
  position: absolute;
  top: 16rpx;
  right: 20rpx;
  z-index: 10;
  line-height: 1;
  box-sizing: border-box;
  cursor: pointer;
}

.close-btn:hover {
  background: rgba(149, 165, 166, 0.1);
  color: #667eea;
  transform: scale(1.1);
}

.close-btn:active {
  background: rgba(149, 165, 166, 0.2);
  transform: scale(0.95);
}

.form-group {
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  margin-bottom: 16rpx;
  font-weight: 600;
  color: #2c3e50;
  font-size: 28rpx;
}

.form-input {
  width: 100%;
  padding: 0 24rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  font-size: 32rpx;
  line-height: 88rpx;
  height: 88rpx;
  transition: border-color 0.3s ease, background-color 0.3s ease, box-shadow 0.3s ease;
  background: #f8f9fa;
  box-sizing: border-box;
  color: #2c3e50;
  vertical-align: middle;
  text-align: left;
}

.form-input:focus {
  border-color: #667eea;
  background: white;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
  outline: none;
  transform: none;
}

.form-input::placeholder {
  color: #bdc3c7;
  font-size: 32rpx;
  line-height: 88rpx;
}

.category-grid {
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.category-item {
  padding: 28rpx 16rpx;
  text-align: center;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 500;
  background: #f8f9fa;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  color: #5a6c7d;
  min-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.category-item:hover {
  border-color: rgba(102, 126, 234, 0.3);
  background: rgba(102, 126, 234, 0.05);
}

.category-item.selected {
  border-color: #667eea;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.15) 0%, rgba(118, 75, 162, 0.15) 100%);
  color: #667eea;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.2);
  transform: scale(1.02);
}

.submit-btn {
  width: 100%;
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: 700;
  border-radius: 30rpx;
  box-shadow: 0 16rpx 50rpx rgba(102, 126, 234, 0.3);
}
