/* pages/accounting/accounting.wxss */

/* 筛选标签 */
.filter-tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  margin-bottom: 40rpx;
  overflow: hidden;
  box-shadow:
    0 8rpx 32rpx rgba(102, 126, 234, 0.1),
    0 2rpx 8rpx rgba(102, 126, 234, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  padding: 8rpx;
}

.filter-tab {
  flex: 1;
  padding: 24rpx 20rpx;
  text-align: center;
  background: transparent;
  border: none;
  font-weight: 600;
  font-size: 28rpx;
  color: #5a6c7d;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border-radius: 16rpx;
  position: relative;
}

.filter-tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow:
    0 4rpx 16rpx rgba(102, 126, 234, 0.3),
    0 1rpx 4rpx rgba(102, 126, 234, 0.2);
  transform: scale(1.02);
}

/* 统计概览 */
.summary-overview {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 50rpx;
  padding: 40rpx;
}

.overview-item {
  text-align: center;
  flex: 1;
}

.overview-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.overview-amount {
  font-size: 40rpx;
  font-weight: 700;
}

.overview-amount.income {
  color: #00C851;
}

.overview-amount.expense {
  color: #ff4444;
}

.overview-divider {
  width: 1px;
  height: 60rpx;
  background: #e9ecef;
  margin: 0 20rpx;
}

/* 图表容器 */
.chart-container {
  margin-bottom: 50rpx;
  text-align: center;
}

.chart-header {
  margin-bottom: 40rpx;
}

.chart-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.chart-subtitle {
  font-size: 26rpx;
  color: #666;
}

.chart-placeholder {
  margin: 40rpx 0;
  display: flex;
  justify-content: center;
}

.chart-circle {
  width: 280rpx;
  height: 280rpx;
  border-radius: 50%;
  background: conic-gradient(
    #667eea 0deg 120deg,
    #56ab2f 120deg 200deg,
    #4facfe 200deg 280deg,
    #ffeaa7 280deg 360deg
  );
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  box-shadow:
    0 16rpx 48rpx rgba(102, 126, 234, 0.2),
    0 4rpx 16rpx rgba(102, 126, 234, 0.1);
  animation: rotate 20s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.chart-center {
  width: 160rpx;
  height: 160rpx;
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(20rpx);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow:
    0 8rpx 24rpx rgba(0,0,0,0.1),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.chart-amount {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 8rpx;
}

.chart-label {
  font-size: 24rpx;
  color: #666;
}

.chart-legend {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 30rpx;
  margin-top: 40rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.legend-color {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
}

.legend-text {
  font-size: 24rpx;
  color: #666;
}

/* 交易记录列表 */
.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.list-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.list-count {
  font-size: 26rpx;
  color: #666;
}

.transaction-group {
  margin-bottom: 40rpx;
}

.group-date {
  font-size: 28rpx;
  font-weight: 600;
  color: #667eea;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1px solid rgba(102, 126, 234, 0.2);
}

.group-transactions {
  background: #f8f9fa;
  border-radius: 20rpx;
  overflow: hidden;
}

.transaction-item {
  padding: 30rpx;
  background: white;
  margin-bottom: 2rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s;
}

.transaction-item:last-child {
  margin-bottom: 0;
}

.transaction-item:hover {
  background: rgba(102, 126, 234, 0.02);
}

.transaction-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.transaction-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  box-shadow: 0 8rpx 30rpx rgba(0,0,0,0.1);
}

.transaction-icon.food {
  background: linear-gradient(135deg, #FFE0B2 0%, #FFCC80 100%);
}

.transaction-icon.transport {
  background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
}

.transaction-icon.shopping {
  background: linear-gradient(135deg, #F3E5F5 0%, #E1BEE7 100%);
}

.transaction-icon.salary,
.transaction-icon.income {
  background: linear-gradient(135deg, #E8F5E8 0%, #C8E6C9 100%);
}

.transaction-title {
  font-size: 32rpx;
  margin-bottom: 8rpx;
  font-weight: 600;
  color: #333;
}

.transaction-meta {
  font-size: 26rpx;
  color: #666;
}

.transaction-amount {
  font-size: 34rpx;
  font-weight: 700;
}

.amount-expense {
  color: #ff4444;
}

.amount-income {
  color: #00C851;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  color: #666;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  color: #333;
}

.empty-subtitle {
  font-size: 28rpx;
  opacity: 0.8;
}

/* 添加按钮 */
.add-btn {
  position: fixed;
  bottom: 120rpx;
  right: 40rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  color: white;
  font-size: 52rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 16rpx 50rpx rgba(102, 126, 234, 0.4);
  z-index: 1000;
  transition: all 0.3s;
}

.add-btn:active {
  transform: scale(0.95);
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.6);
  z-index: 2000;
  display: flex;
  align-items: flex-end;
}

.modal-content {
  width: 100%;
  background: white;
  border-radius: 32rpx 32rpx 0 0;
  padding: 40rpx 32rpx 60rpx;
  animation: slideUp 0.4s ease-out;
  box-shadow: 0 -20rpx 80rpx rgba(0,0,0,0.2);
  max-height: 85vh;
  overflow-y: auto;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
  position: relative;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #2c3e50;
  flex: 1;
}

.close-btn {
  background: transparent;
  border: none;
  font-size: 28rpx;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #95a5a6;
  transition: all 0.3s ease;
  margin-left: 16rpx;
  padding: 0;
}

.close-btn:hover {
  background: rgba(149, 165, 166, 0.1);
  color: #667eea;
  transform: scale(1.1);
}

.close-btn:active {
  background: rgba(149, 165, 166, 0.2);
  transform: scale(0.95);
}

/* 类型切换 */
.type-tabs {
  display: flex;
  background: #f8f9fa;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
  padding: 6rpx;
}

.type-tab {
  flex: 1;
  padding: 20rpx 24rpx;
  text-align: center;
  background: transparent;
  border: none;
  font-weight: 600;
  font-size: 28rpx;
  color: #7f8c8d;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border-radius: 12rpx;
}

.type-tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
  transform: scale(1.02);
}

.form-group {
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  margin-bottom: 16rpx;
  font-weight: 600;
  color: #2c3e50;
  font-size: 28rpx;
}

.form-input {
  width: 100%;
  padding: 24rpx 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  font-size: 30rpx;
  line-height: 1.4;
  transition: border-color 0.3s ease, background-color 0.3s ease, box-shadow 0.3s ease;
  background: #f8f9fa;
  box-sizing: border-box;
  color: #2c3e50;
  vertical-align: top;
  text-align: left;
}

.form-input:focus {
  border-color: #667eea;
  background: white;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
  outline: none;
  transform: none;
}

.form-input::placeholder {
  color: #bdc3c7;
  font-size: 28rpx;
}

.category-grid {
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.category-item {
  padding: 28rpx 16rpx;
  text-align: center;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 500;
  background: #f8f9fa;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  color: #5a6c7d;
  min-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.category-item:hover {
  border-color: rgba(102, 126, 234, 0.3);
  background: rgba(102, 126, 234, 0.05);
}

.category-item.selected {
  border-color: #667eea;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.15) 0%, rgba(118, 75, 162, 0.15) 100%);
  color: #667eea;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.2);
  transform: scale(1.02);
}

.submit-btn {
  width: 100%;
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: 700;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
  margin-top: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.4);
}
