.settings-section {
  margin-bottom: 50rpx;
}

.settings-list {
  background: #f8f9fa;
  border-radius: 20rpx;
  overflow: hidden;
  padding: 0;
}

.setting-item {
  padding: 30rpx;
  background: white;
