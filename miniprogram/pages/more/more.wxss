  display: flex;
  align-items: center;
  gap: 24rpx;
  transition: all 0.3s;
}

.setting-item:last-child {
  margin-bottom: 0;
}

.setting-item:hover {
  background: rgba(102, 126, 234, 0.02);
}

.setting-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.setting-content {
  flex: 1;
}

.setting-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.setting-desc {
  font-size: 26rpx;
  color: #666;
  opacity: 0.8;
}

.setting-arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 反馈建议 */
.feedback-section {
  margin-bottom: 40rpx;
}

.feedback-btn {
  width: 100%;
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 30rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  box-shadow: 0 16rpx 50rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s;
}

.feedback-btn:active {
  transform: scale(0.98);
}

.feedback-icon {
  font-size: 40rpx;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.6);
  z-index: 2000;
  display: flex;
  align-items: flex-end;
}

.modal-content {
  width: 100%;
  background: white;
  border-radius: 50rpx 50rpx 0 0;
  padding: 60rpx 50rpx;
  animation: slideUp 0.4s ease-out;
  box-shadow: 0 -20rpx 80rpx rgba(0,0,0,0.2);
  max-height: 80vh;
  overflow-y: auto;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 50rpx;
  padding-bottom: 40rpx;
  border-bottom: 1px solid #f0f0f0;
}

.modal-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
}

.close-btn {
  background: transparent;
  border: none;
  font-size: 28rpx;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #95a5a6;
  transition: all 0.3s ease;
  margin-left: 16rpx;
  padding: 0;
}

.close-btn:hover {
  background: rgba(149, 165, 166, 0.1);
  color: #667eea;
  transform: scale(1.1);
}

.close-btn:active {
  background: rgba(149, 165, 166, 0.2);
  transform: scale(0.95);
}

.form-group {
  margin-bottom: 50rpx;
}

.form-label {
  display: block;
  margin-bottom: 20rpx;
  font-weight: 600;
  color: #333;
  font-size: 30rpx;
}

.form-input {
  width: 100%;
  padding: 28rpx 24rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  font-size: 32rpx;
  line-height: 1.5;
  min-height: 88rpx;
  transition: border-color 0.3s ease, background-color 0.3s ease, box-shadow 0.3s ease;
  background: #f8f9fa;
  box-sizing: border-box;
  color: #2c3e50;
  vertical-align: middle;
  text-align: left;
  display: flex;
  align-items: center;
}

.picker-input {
  color: #2c3e50;
  display: flex;
  align-items: center;
  min-height: 88rpx;
  width: 100%;
  padding: 28rpx 24rpx;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  min-height: 140rpx;
  padding: 28rpx 24rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  font-size: 32rpx;
  line-height: 1.5;
  background: #f8f9fa;
  box-sizing: border-box;
  color: #2c3e50;
  vertical-align: top;
  text-align: left;
  resize: none;
}

.form-input:focus,
.form-textarea:focus {
  border-color: #667eea;
  background: white;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
  outline: none;
  transform: none;
}

/* 头像上传 */
.avatar-upload {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.upload-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #e9ecef;
}

.upload-text {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 600;
}

.submit-btn {
  width: 100%;
  padding: 36rpx;
  font-size: 34rpx;
  font-weight: 700;
  border-radius: 30rpx;
  box-shadow: 0 16rpx 50rpx rgba(102, 126, 234, 0.3);
}
