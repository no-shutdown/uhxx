/**app.wxss - 薄荷生活全局样式**/

/* 全局重置 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  color: #2c3e50;
  line-height: 1.6;
  font-size: 28rpx;
}

/* 通用容器 */
.container {
  padding: 0;
  min-height: 100vh;
  box-sizing: border-box;
  background: transparent;
}

/* 页面内容区域 */
.page-content {
  padding: 20rpx 24rpx 40rpx;
  max-width: 750rpx;
  margin: 0 auto;
}

/* 卡片样式 */
.card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  padding: 40rpx 32rpx;
  box-shadow:
    0 8rpx 32rpx rgba(102, 126, 234, 0.12),
    0 2rpx 8rpx rgba(102, 126, 234, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 50%, #667eea 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.card:hover::before {
  opacity: 1;
}

.card:hover {
  transform: translateY(-4rpx);
  box-shadow:
    0 16rpx 48rpx rgba(102, 126, 234, 0.16),
    0 4rpx 16rpx rgba(102, 126, 234, 0.12),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
}

.card-title {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
  color: #2c3e50;
  letter-spacing: 0.5rpx;
}

/* 渐变背景 */
.gradient-bg {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.gradient-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.gradient-success {
  background: linear-gradient(135deg, #56ab2f 0%, #a8e6cf 100%);
  box-shadow: 0 8rpx 24rpx rgba(86, 171, 47, 0.3);
}

.gradient-danger {
  background: linear-gradient(135deg, #ff6b6b 0%, #ffa8a8 100%);
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.3);
}

.gradient-info {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  box-shadow: 0 8rpx 24rpx rgba(79, 172, 254, 0.3);
}

.gradient-warning {
  background: linear-gradient(135deg, #ffeaa7 0%, #fab1a0 100%);
  box-shadow: 0 8rpx 24rpx rgba(255, 234, 167, 0.3);
}

/* 文本颜色 */
.text-primary {
  color: #667eea;
}

.text-success {
  color: #00C851;
}

.text-danger {
  color: #ff4444;
}

.text-muted {
  color: #666;
}

/* 按钮样式 */
.btn {
  padding: 28rpx 56rpx;
  border-radius: 28rpx;
  font-size: 30rpx;
  font-weight: 600;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: none;
  outline: none;
  position: relative;
  overflow: hidden;
  letter-spacing: 0.5rpx;
}

.btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.5s;
}

.btn:active::before {
  left: 100%;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow:
    0 8rpx 24rpx rgba(102, 126, 234, 0.3),
    0 2rpx 8rpx rgba(102, 126, 234, 0.2);
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow:
    0 4rpx 12rpx rgba(102, 126, 234, 0.4),
    0 1rpx 4rpx rgba(102, 126, 234, 0.3);
}

.btn-success {
  background: linear-gradient(135deg, #56ab2f 0%, #a8e6cf 100%);
  color: white;
  box-shadow:
    0 8rpx 24rpx rgba(86, 171, 47, 0.3),
    0 2rpx 8rpx rgba(86, 171, 47, 0.2);
}

.btn-outline {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(102, 126, 234, 0.3);
  color: #667eea;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.1);
}

.btn-outline:hover {
  background: rgba(102, 126, 234, 0.1);
  border-color: #667eea;
}

/* 输入框样式 */
.input {
  width: 100%;
  padding: 30rpx;
  border: 2px solid #e9ecef;
  border-radius: 24rpx;
  font-size: 32rpx;
  background: #f8f9fa;
  transition: all 0.3s;
  box-sizing: border-box;
}

.input:focus {
  border-color: #667eea;
  background: white;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
}

/* 网格布局 */
.grid {
  display: grid;
  gap: 30rpx;
}

.grid-2 {
  grid-template-columns: 1fr 1fr;
}

.grid-3 {
  grid-template-columns: repeat(3, 1fr);
}

.grid-4 {
  grid-template-columns: repeat(4, 1fr);
}

/* 弹性布局 */
.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

/* 间距 */
.mb-10 { margin-bottom: 20rpx; }
.mb-15 { margin-bottom: 30rpx; }
.mb-20 { margin-bottom: 40rpx; }
.mb-25 { margin-bottom: 50rpx; }

.mt-10 { margin-top: 20rpx; }
.mt-15 { margin-top: 30rpx; }
.mt-20 { margin-top: 40rpx; }
.mt-25 { margin-top: 50rpx; }

/* 字体大小 */
.text-xs { font-size: 24rpx; }
.text-sm { font-size: 28rpx; }
.text-base { font-size: 32rpx; }
.text-lg { font-size: 36rpx; }
.text-xl { font-size: 40rpx; }
.text-2xl { font-size: 48rpx; }

/* 字体粗细 */
.font-normal { font-weight: 400; }
.font-medium { font-weight: 500; }
.font-semibold { font-weight: 600; }
.font-bold { font-weight: 700; }

/* 页面切换动画 */
page {
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 通用动画类 */
.animate-bounce {
  animation: bounce 1s infinite;
}

@keyframes bounce {
  0%, 20%, 53%, 80%, 100% {
    transform: translate3d(0,0,0);
  }
  40%, 43% {
    transform: translate3d(0,-30rpx,0);
  }
  70% {
    transform: translate3d(0,-15rpx,0);
  }
  90% {
    transform: translate3d(0,-4rpx,0);
  }
}

.animate-pulse {
  animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: .5;
  }
}

.animate-spin {
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  color: #667eea;
}

.loading-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #667eea;
  margin: 0 4rpx;
  animation: loading 1.4s infinite ease-in-out both;
}

.loading-dot:nth-child(1) { animation-delay: -0.32s; }
.loading-dot:nth-child(2) { animation-delay: -0.16s; }

@keyframes loading {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

/* 毛玻璃效果 */
.glass {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

/* 渐变文字 */
.gradient-text {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  color: transparent;
}

/* 悬浮效果 */
.hover-float:hover {
  transform: translateY(-4rpx);
  transition: transform 0.3s ease;
}

/* 点击反馈 */
.tap-feedback:active {
  transform: scale(0.98);
  transition: transform 0.1s ease;
}
